{
  "manifest_version": 3,
  "name": "EventScope LinkedIn Scraper",
  "version": "1.0.0",
  "description": "Auto-scroll and extract LinkedIn search results for EventScope",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/search/results/*",
        "https://*.linkedin.com/feed/*",
        "https://*.linkedin.com/feed"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "EventScope Scraper"
  }
}